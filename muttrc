set from='martin.sandsmark@remarkable.no'
set realname='Martin Sandsmark'
alternates ^martin.sandsmark@remarkable\.com$ ^martin@magmacompany\.com$
set reverse_name=yes


set mail_check=5
set timeout=60
set mbox_type=Maildir
set folder="~/Mail"
set spoolfile="+INBOX"
set record="+sent"
set postponed="+drafts"
set header_cache="~/Mail/mutt-header-cache"

# Name of folders, generated by offlineimap
source ~/.mutt/mailboxes

set sendmail="/usr/bin/msmtp"

# Maildir!

macro index <Esc>M "T~N<enter>;WNT~O<enter>;WO\CT~A<enter>" "mark all messages read"

ignore *

# Headers
set autoedit
set use_from=yes
unignore User-Agent
unignore X-Mailer
unignore X-MimeOLE
unignore X-Spam-Score
unignore X-Spam-Report
unignore Resent*

unignore From
color header green black "From: "
unignore Reply-To
color header green black "From: "
unignore To
color header red black "To: "
unignore Cc
color header red black "Cc: "
unignore Bcc
color header red black "Bc: "
unignore Subject
color header yellow black "Subject: "
unignore Date
color header magenta black "Date: "


# Ikke spør
set move=no

# Litt koking fra vegarwe sin .muttrc
set copy=yes            # Lagre alle utgående mail
set delete=ask-yes      # Spør før en sletter meldinger
set include=yes         # alltid quote

set postpone=ask-yes    # spør når jeg avbryter skriving
set print=ask-no        # spør før printing. Stort sett tastefeil uansett. 
#set followup_to=no   # Generer followup-to header på utgående mail. 
set edit_hdrs           # la meg få kontroll over headerene
set abort_unmodified    # drit i meldinger jeg ikke har lagret
set bounce_delivered=no # Fjern Delivered-To: header ved bouncing
set pager_index_lines=6 # splitscreen mutt!! ;)
set pager_stop=yes      # hopp til neste melding når du browser ferdig en gammel
set arrow_cursor=no     # bruk hele linjen som meny markør
set check_new=yes       # sjekk for nye meldinger i maildir og MH-style bokser.
set forward_quote=no    # quote forwardinger?
set help=no	            # slår av/på hjelp-headeren 
set indent_string="> "  # endre denne, og bli flamet til døde :)
set status_on_top       # få status-linja til toppen
set mark_old=no	        # Show old but unread messages
set menu_scroll=yes     # Ikke hopp hele sider opp og ned i indeksen
set beep_new=yes

# endre hvordan folder-index'en ser ut :)
# http://www.mutt.org/doc/manual/manual-6.html#folder_format
set folder_format="%t%N  %2C %-30f %8s %d "
# hvordan linjene i meldings-index'en skal se ut.
set hdr_format="%4C %Z %{%b %d} %-15.15n (%4l) %s"
color normal    white black
color attachment brightyellow black
color hdrdefault cyan black
color indicator black cyan
color markers   brightred black
color quoted    green black
color signature cyan black
color status    brightgreen blue
color tilde blue black
color tree  red black
# hvordan bunn-linja skal se ut når du leser mail
set pager_format="%S [%T] %n / %s"
# hvordan status-linjen i index-menyen skal se ut
set status_format = "-%r-Mutt: %f [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]---(%s/%S)-%>-(%P)---"

# default sortering
set sort=threads
set sort_aux=last-date-received

# farger på smileys, kult at den takler regexp også :)
color body      black       yellow " [;:=]-?[)/(|]"

# farger i index'en
color index     yellow       black ~N      # Ny 
color index     yellow       black ~O      # Gammel, men ulest 
color index     magenta      black ~F      # Flagged
color index     blue         black ~T      # Tagged
color index     red          black ~D      # Deleted

# Saklig tab-ing (tabber også til unread, ikke bare new)
bind index   \t          next-unread
bind pager   \t          next-unread
bind index  ,\t      previous-unread
bind pager  ,\t      previous-unread

set read_inc=1000 # Speed up opening of large mboxes
set write_inc=1000

set sleep_time=0    # instant faster mutt

set charset=utf-8
set send_charset=utf-8

alternative_order text/plain text/html text/enriched
auto_view text/html application/pdf

